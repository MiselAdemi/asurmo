<%= render 'organizations/partials/header' %>

<div id="row">
  <%= render 'organizations/partials/sidebar_left' %>
  
  <div class="col-lg-8 status-box status-form">
      <%= form_for([@statusable, @status], :url => organization_statuses_path(@organization)) do |f| %>
        <p class="">
        <%= f.text_area :body, :rows => "2", :placeholder => "Say your oppinion...", :data => { behavior: "autocomplete" } %>
        </p>

        <%= f.submit "Post", :class => "col-md-2 btn btn-info pull-right" %>
      <% end %>

    <div class="col-lg-12 status-box">
      <ul class="timeline">
        <%= render @activities %>
      </ul>

      <%= paginate @activities %>

    </div>
  </div>
</div>
