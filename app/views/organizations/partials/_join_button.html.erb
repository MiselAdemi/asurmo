<%= link_to 'Join', organization_join_member_path(@organization, current_user.id), :method => :post, :remote => true, :class => "label label-primary join-btn" if !is_supporting_organization?(@organization, current_user) %>

<%= link_to 'Exit organization', organization_remove_member_path(@organization, current_user.id), :method => :delete, :remote => true, :class => "label label-warning join-btn" if is_member?(@organization, current_user) %>
