<div class="col-lg-3 left-sidebar">

  <%= render 'organizations/partials/admin_left' if is_organization_owner?(@organization) %>
  <%= render 'organizations/partials/campain_widget' %>

  <div class="panel panel-default panel-photo">
    <div class="panel-heading">
      <h3 class="panel-title">You are admin</h3>
    </div>
    <div class="panel-body">
      <%= link_to 'Join', organization_join_path(@organization, current_user), :method => :put if !is_supporting_organization?(@organization, current_user) %>
      <%= link_to 'Exit organization', organization_unjoin_path(@organization, current_user), :method => :delete if is_member?(@organization, current_user) %>
      <%= link_to 'Start campain', new_organization_campain_path(@organization) %>
    </div>
  </div>
</div>
