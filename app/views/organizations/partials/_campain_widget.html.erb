<div class="shadow w-full flex-wrap my-6 bg-white">
  <p class="p-4 border-b border-grey text-grey-darker">Latest campains</p>

  <div class="content p">
    <% if !@campains.exists? %>
      <p>Create first campain for this organization</p>
    <% else %>
      <div class="list-group">
        <% UsersHelper.viewable_campaigns(@campains, current_user).each do |campaign| %>
          <%= link_to organization_campain_path(@organization, campaign), :class => "relative block no-underline hover:bg-grey-lightest border-b p-4 text-grey-darker" do %>
            <%= campaign.name %>
            <%= OrganizationsHelper.publicity_label(campaign).html_safe %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
