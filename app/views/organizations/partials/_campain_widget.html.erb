<div class="panel panel-default latest-campain-widget">
  <div class="panel-heading">
    <h3 class="panel-title">Latest campains</h3>
    <a data-toggle="modal" data-target="#newCampainModal">New campain</a>
  </div>
  <div class="panel-body">
    <% if !@campains.exists? %>
      <p>Create first campain for this organization</p>
    <% else %>
      <div class="list-group">
        <% @campains.each do |campain| %>
          <% if(campain.id != nil) %>
            <%= link_to campain.name, organization_campain_path(@organization, campain), :class => "list-group-item list-group-item-action" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- New Campain Modal -->
<div class="modal animated zoomIn" id="newCampainModal" tabindex="-1" role="dialog" aria-labelledby="newCampainModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Start new campain</h4>
      </div>
      <%= form_for([@organization, @campain], :html => {:multipart => true}) do |f| %>
        <div class="modal-body clearfix">

          <div class="field">
            <%= f.label :name, :class => "col-md-3 control-label" %>
            <div class="col-md-8 pull-right">
              <%= f.text_field :name %>
            </div>
          </div>

          <div class="field">
            <%= f.label :avatar, :class => "col-md-3 control-label" %>
            <div class="col-md-8 pull-right">
              <%= f.file_field :avatar, :class => "form-control" %>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Create", :class => "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

