<div class="row">
  <div class="profile clearfix">
    <div class="image">
      <img src="http://lorempixel.com/700/300/nature/2/" class="img-cover">
    </div>

    <div class="user clearfix">
      <div class="avatar">
        <%= image_tag @user.avatar.url, :class => "img-profile img-thumbnail" %>
      </div>

      <h2><%= @user.first_name %> <%= @user.last_name %></h2>

      <div class="actions">
        <div class="btn-group">
          <%= profile_action_link("Photos", albums_path(current_user)) %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3"></div>

  <div class="col-lg-6 edit-center">
    <div class="panel panel-info">
      <div class="panel-body">
        <h3 class="col-lg-6">My Organiations</h3>
        <%= link_to "New", new_organization_path, :class => "col-lg-6 btn btn-primary pull-right" %>
        <% if @owner_organizations.blank? %>
          <p class="col-lg-12">There is no organization you owne yet! Create one now</p>
        <% else %>
          <div class="table-responsive table-sm">
            <table class="table table-sm">
              <% @owner_organizations.each do |organization| %>
                <tr>
                  <td width="10%"><%= image_tag organization.avatar.url, :class => "icon-responsive" %></td>
                  <td><%= link_to organization.name, organization_path(organization) %></td>
                  <td class="text-right">
                    <%= link_to "", edit_organization_path(organization), :class => "fa fa-pencil text-warning" %>
                    <%= link_to "", organization_path(organization), :method => :delete, :class => "fa fa-trash text-danger" %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        <% end %>
      </div>
    </div>

    <div class="panel panel-info">
      <div class="panel-body">
        <h3>Organiations I Moderate</h3>
        <% if @moderate_organizations.blank? %>
          <p>There is no organization you moderate yet!</p>
        <% else %>
          <div class="table-responsive">
            <table class="table">
              <tr>
                <th>Name</th>
                <th></th>
              </tr>
              <% @moderate_organizations.each do |organization| %>
                <tr>
                  <td><%= link_to organization.name, organization_path(organization) %></td>
                  <td class="text-right">
                    <%= link_to "", edit_organization_path(organization), :class => "fa fa-pencil text-warning" %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        <% end %>
      </div>
    </div>

    <div class="panel panel-info">
      <div class="panel-body">
        <h3>Organiations I am member</h3>
        <% if @member_organizations.blank? %>
          <p>There is no organization you are member yet!</p>
        <% else %>
          <div class="table-responsive">
            <table class="table">
              <tr>
                <th>Name</th>
                <th></th>
              </tr>
              <% @member_organizations.each do |organization| %>
                <tr>
                  <td><%= link_to organization.name, organization_path(organization) %></td>
                  <td class="text-right">
                    <%= link_to "", edit_organization_path(organization), :class => "fa fa-pencil text-warning" %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
