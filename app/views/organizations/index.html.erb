<div class="col-lg-3">
  <div class="col-lg-12 sidebar-avatar">
    <%= image_tag current_user.avatar.url, :class => "img-responsive thumbnail" %>
    <h3><%= current_user.first_name %> <%= current_user.last_name %></h3>
  </div>

  <%= render "users/sidebar_menu" %>
</div>

<div class="col-lg-6 edit-center">
  <div class="panel panel-info">
    <div class="panel-body">
      <h3 class="col-lg-6">My Organiations</h3>
      <%= link_to "New", new_organization_path, :class => "btn btn-primary" %>
      <% if @owner_organizations.blank? %>
        <p>There is no organization you owne yet! Create one now</p>
      <% else %>
        <div class="table-responsive">
          <table class="table">
            <tr>
              <th width="10%"></th>
              <th>Name</th>
              <th></th>
            </tr>
            <% @owner_organizations.each do |organization| %>
              <tr>
                <td><%= image_tag organization.avatar.url, :class => "icon-responsive" %></td>
                <td><%= link_to organization.name, organization_path(organization) %></td>
                <td class="text-right">
                  <%= link_to "", edit_organization_path(organization), :class => "fa fa-pencil text-warning" %>
                  <%= link_to "", organization_path(organization), :method => :delete, :class => "fa fa-trash text-danger" %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      <% end %>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-body">
      <h3>Organiations I Moderate</h3>
      <% if @moderate_organizations.blank? %>
        <p>There is no organization you moderate yet!</p>
      <% else %>
        <div class="table-responsive">
          <table class="table">
            <tr>
              <th>Name</th>
              <th></th>
            </tr>
            <% @moderate_organizations.each do |organization| %>
              <tr>
                <td><%= link_to organization.name, organization_path(organization) %></td>
                <td class="text-right">
                  <%= link_to "", edit_organization_path(organization), :class => "fa fa-pencil text-warning" %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      <% end %>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-body">
      <h3>Organiations I am member</h3>
      <% if @member_organizations.blank? %>
        <p>There is no organization you are member yet!</p>
      <% else %>
        <div class="table-responsive">
          <table class="table">
            <tr>
              <th>Name</th>
              <th></th>
            </tr>
            <% @member_organizations.each do |organization| %>
              <tr>
                <td><%= link_to organization.name, organization_path(organization) %></td>
                <td class="text-right">
                  <%= link_to "", edit_organization_path(organization), :class => "fa fa-pencil text-warning" %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
