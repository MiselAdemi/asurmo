<%= form_for new_comment do |f| %>
  <%= f.hidden_field :commentable_id, value: new_comment.commentable_id %>
  <%= f.hidden_field :commentable_type, value: new_comment.commentable_type %>
  <%= f.hidden_field :body, id: 'task_comment_body' %>
  <trix-editor input="task_comment_body" placeholder="Leave comment..."></trix-editor>

  <%= f.submit "Send", class: "no-underline bg-transparent cursor-pointer hover:bg-blue text-blue-dark font-semibold hover:text-white py-2 px-4 border border-blue-dark hover:border-transparent rounded" %>
<% end %>
