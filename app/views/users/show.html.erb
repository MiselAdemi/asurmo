<div class="fb-profile">
  <img align="left" class="fb-image-lg" src="http://lorempixel.com/850/280/nightlife/5/" alt="Profile image example"/>
  <%= image_tag @user.avatar.url, :class => "fb-image-profile thumbnail", :align => "left" %>
  <div class="fb-profile-text">
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <p><%= @user.email %></p>
  </div>
</div>

<%= form_for(@user, :url => user_update_avatar_path(@user), :method => :put, :html => {:multipart => true}) do |f| %>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.submit %>
<% end %>
<%= render "sidebar_left" %>

<div class="col-lg-6 profile-center">
  <div class="col-lg-12 status-box">
    <textarea placeholder="What is on your mind?" rows="2"></textarea>
  </div>
</div>
