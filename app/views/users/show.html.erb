<div id="row" class="profile">
  <div class="image">
    <%= image_tag "http://lorempixel.com/700/300/nature/2/", :class => "img-cover" %>
  </div>

  <div class="user clearfix">
    <div class="avatar">
      <%= image_tag @user.avatar.url, :class => "img-profile img-thumbnail" %>
    </div>

    <div class="upload-avatar">
      <a data-toggle="modal" data-target="#uploadAvatarModal"><i class="fa fa-camera-retro" aria-hidden="true"></i></a>
    </div>

    <div class="cover-text">
      <h2><%= current_user.full_name %></h2>
      <p><i class="fa fa-clock-o" aria-hidden="true"></i> Last active 1 hour ago</p>
    </div>
  </div>

</div>

<div id="row">
  <%= render 'sidebar_left' %>


  <div class="col-lg-6 profile-center">
    <div class="col-lg-12 status-box status-form">
      <%= form_for(@status, :url => user_statuses_path(@user)) do |f| %>
        <%= f.text_area :body, :rows => "2", :placeholder => "Say your oppinion..." %>

        <%= f.submit "Post", :class => "col-md-2 btn btn-info pull-right" %>
      <% end %>

      <div class="status-actions pull-left">
        <a data-toggle="modal" data-target="#uploadPictureModal"><i class="fa fa-camera-retro" aria-hidden="true"></i></a>
      </div>
    </div>

    <div class="col-lg-12 status-box">
      <% @activities.each do |activity| %>
        <%= render :partial => "users/partials/activity/#{activity.trackable_type.downcase}/#{activity.action}", :locals => {:activity => activity } %>
      <% end %>
    </div>
  </div>

</div>

<!-- Upload Avatar Modal -->
<div class="modal animated zoomIn" id="uploadAvatarModal" tabindex="-1" role="dialog" aria-labelledby="uploadAvatarModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Upload Profile Picture</h4>
      </div>
      <%= form_for(@user, :url => user_update_avatar_path(@user), :method => :put, :html => {:multipart => true}) do |f| %>
        <div class="modal-body clearfix">
          <%= f.label :avatar, :class => "col-md-3 control-label" %>
          <div class="col-md-8">
            <%= f.file_field :avatar, :class => "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Upload", :class => "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Upload Picture Modal -->
