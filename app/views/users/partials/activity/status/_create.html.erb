<div class="panel panel-white post panel-shadow">
  <div class="post-heading">
    <div class="pull-left image">
      <%= image_tag activity.user.avatar.url, :class => "avatar" %>
    </div>

    <div class="pull-left meta">
      <div class="title h5">
        <a href="#" class="post-user-name"><%= activity.user.full_name %></a>
        made a post.
      </div>
      <h6 class="text-muted time"><%= time_ago_in_words(activity.created_at) %></h6>
    </div>

    <div class="btn-group pull-right">
      <i class="fa fa-cog" aria-hidden="true" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
      <ul class="dropdown-menu">
        <li><a href="#">Edit</a></li>
        <li><a href="#">Delete</a></li>
      </ul>
    </div>
  </div>

  <div class="post-description">
    <p><%= activity.trackable.body %></p>
  </div>
</div>
