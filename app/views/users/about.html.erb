<div class="col-lg-3">
  <div class="col-lg-12 sidebar-avatar">
    <% if @user.avatar.url %>
      <%= image_tag @user.avatar.url, :class => "img-profile img-thumbnail" %>
    <% else %>
      <%= image_tag "https://exelord.github.io/ember-initials/images/default-d5f51047d8bd6327ec4a74361a7aae7f.jpg", :class => "img-profile img-thumbnail" %>
    <% end %> 
    <h3><%= @user.first_name %> <%= @user.last_name %></h3>
  </div>

  <%= render "sidebar_menu" %>
</div>

<div class="col-lg-6 edit-center">
  <div class="panel panel-info">
    <div class="panel-body">
      <h3>User information</h3>

      <div class="col-lg-12">
        <p><span>Birthday: </span><%= @user.dob %></p>
      </div>

      <div class="col-lg-12">
        <p><span>Country: </span><%= @user.country_code %></p>
      </div>

      <div class="col-lg-12">
        <p><span>Street address: </span><%= @user.street %></p>
      </div>

      <div class="col-lg-12">
        <p><span>ZIP code: </span><%= @user.zip_code %></p>
      </div>
    </div>
  </div>
</div>
