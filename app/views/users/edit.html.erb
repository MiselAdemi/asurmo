<%= render 'users/partials/header' %>

<div class="container flex-wrap w-full mx-auto mt-6">
  <%= render "edit" %>

  <div class="shadow w-full mb-6">
    <p class="p-4">Change password</p>

    <div class="content bg-white p-4">
      <%= form_for(@user) do |f| %>
        <div class="w-full flex my-2">
          <label class="text-grey-darkest w-2/5 pt-2">Current Password</label>
          <input class="bg-white w-1/2 animation appearance-none border-2 border-grey-lighter hover:border-blue-dark rounded w-full py-2 px-4 text-grey-darker" type="text">
        </div>

        <div class="w-full flex my-2">
          <label class="text-grey-darkest w-2/5 pt-2">New Password</label>
          <input class="bg-white w-1/2 animation appearance-none border-2 border-grey-lighter hover:border-blue-dark rounded w-full py-2 px-4 text-grey-darker" type="text">
        </div>

        <div class="mt-6">
          <%= f.submit 'Update password', :class => "bg-grey-lighter flex-1 border-b-2 md:flex-none border-green ml-2 hover:bg-green-lightest text-grey-darkest font-bold py-4 px-6 rounded" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
