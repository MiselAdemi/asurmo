<div class="flex" style="margin-top: 60px;">
  <% if user_signed_in? %>
    <div class="col-lg-3">

    </div>

    <div class="col-lg-6 profile-center">
      <div class="col-lg-12 timeline-status-frame">
        <%= form_for([@statusable, @status], :url => user_statuses_path(current_user)) do |f| %>
          <div id="status-textarea" placeholder="Say your oppinion..." contenteditable="true" data-behavior="autocomplete"></div>
          <%= f.text_area :body, :rows => "2", :id => "status-hidden-textarea",  :placeholder => "Say your oppinion..." %>

          <%= button_tag(type: 'submit', class: "btn btn-send pull-right") do %>
            <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
          <% end %>
        <% end %>

        <div class="status-actions pull-left">
          <a data-toggle="modal" data-target="#uploadPictureModal"><i class="fa fa-picture-o" aria-hidden="true"></i> Upload image</a>
        </div>
      </div>

      <div class="col-lg-12 status-box">
        <ul class="single-status">
          <%= render @activities %>
        </ul>

        <%= paginate @activities %>

      </div>

    </div>
  <% else %>
    <div class="w-1/2">
      <div class="w-1/2 m-auto">
        <h2>Be active, be alive</h2>
        <h3>ItÂ´s your time to change world!</h3>
      </div>

      <div class="w-1/2 m-auto mt-16">
        <h2 class="mb-8">Get early access</h2>
        <%= form_for Lead.new do |f| %>
          <%= f.email_field :email, class: 'shadow appearance-none border rounded w-3/5 inlnie-block py-2 px-3 text-grey-darker', placeholder: "Your email" %>
          <%= f.submit "Request access", class: 'bg-blue hover:bg-blue-dark text-white inline-block font-bold py-2 px-4 rounded' %>
        <% end %>

        <% if notice %>
          <div class="mt-6 bg-teal-lightest border-t-4 border-teal rounded-b text-teal-darkest px-4 py-3 shadow-md" role="alert">
            <div class="flex">
              <div class="py-1"><svg class="fill-current h-6 w-6 text-teal mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg></div>
              <div>
                <p class="font-bold"><%= notice %></p>
                <p class="text-sm">When registration is enabled for beta users you will get email with instructions.</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="w-1/2 items-center">
      <div class="w-1/2 m-auto">
        <%= render "home/login" %>
      </div>

      <div class="row well sign-up-wrapper">
        <%= render "devise/registrations/new" if Rails.env.development? %>
      </div>
      <h4>This is pre alpha, you can join just with invitation!</h4>
    </div>
  <% end %>
</div>
