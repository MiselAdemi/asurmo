<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :validate => true, class: "w-full max-w-xs") do |f| %>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-grey font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
        Email
      </label>
    </div>
    <div class="md:w-2/3">
      <%= f.text_field :email, class: "bg-grey-lighter appearance-none border-2 border-grey-lighter hover:border-blue rounded w-full py-2 px-4 text-grey-darker", :placeholder => "Email" %>
    </div>
  </div>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-grey font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-username">
        Password
      </label>
    </div>
    <div class="md:w-2/3">
      <%= f.password_field :password, class: "bg-grey-lighter appearance-none border-2 border-grey-lighter hover:border-blue rounded w-full py-2 px-4 text-grey-darker", :placeholder => "Password" %>
    </div>
  </div>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3"></div>
    <label class="md:w-2/3 block text-grey font-bold">
      <%= f.check_box :remember_me, class: 'mr-2' %>
      <span class="text-sm">
        Remember me
      </span>
    </label>
  </div>
  <div class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-2/3">
      <%= f.submit 'Sign in', :class => "shadow bg-blue hover:bg-blue-light text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <%= link_to "Forgot your password?", new_password_path(:user), class: "no-underline text-blue-dark hover:text-blue-darkest text-center block mt-6" %>
<% end %>
