        </li>
        <li>
          <%= image_tag image_url("upcoming_event.jpg") %>
          <h5>Event name</h5>
        </li>
      </ul>

    </div>

    <div class="col-lg-12 profile-center">
    	<% if current_user.is_organization_admin?(@organization) %>
				<div class="col-lg-12 status-box status-form">
				  <%= form_for([@statusable, @status], :url => organization_campain_statuses_path(@organization, @campain)) do |f| %>
				    <p class="">
				    <%= f.text_area :body, :rows => "2", :placeholder => "Say your oppinion...", :data => { behavior: "autocomplete" } %>
				    </p>

				    <%= f.submit "Post", :class => "col-md-2 btn btn-info pull-right" %>
				  <% end %>

				  <div class="status-actions pull-left">
				    <a data-toggle="modal" data-target="#uploadPictureModal"><i class="fa fa-camera-retro" aria-hidden="true"></i></a>
				  </div>
				</div>
		  <% end %>

		  <div class="col-lg-12 status-box">
		    <ul class="timeline">
		      <%= render @activities %>
		    </ul>

		    <%= paginate @activities %>

		  </div>
		</div>
  </div>

  <div class="col-lg-3 campain-left-side">
    <div class="info">
      <%= image_tag "http://english.tw/wp-content/themes/qaengine/img/default-thumbnail.jpg", :class => "campain-avatar" %>

      <h4><%= @campain.name %></h4>
    </div>

    <div class="events panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Events</h3>
      </div>
      <div class="panel-body">
        Event list
      </div>
    </div>
  </div>

</div>
