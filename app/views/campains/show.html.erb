<div class="row">

  <div class="col-lg-9 campain-center">
    <div class="col-lg-12 campain-header-events">

      <ul class="list-inline">
        <li>
          <%= image_tag image_url("upcoming_event.jpg") %>
          <h5>Event name</h5>
        </li>
        <li>
          <%= image_tag image_url("upcoming_event.jpg") %>
          <h5>Event name</h5>
        </li>
        <li>
