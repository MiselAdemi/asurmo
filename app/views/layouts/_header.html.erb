<%= nav_bar fixed: :top, brand: "ASURMO", responsive: true do %>
  <%= menu_group do %>
    <%= menu_item "Home", root_path %>
    <%= menu_divider %>
  <% end %>
  <%= menu_group pull: :right do %>
    <% if user_signed_in? %>
      <%= drop_down current_user.email do %>
        <%= menu_item "Profile", user_path(current_user) %>
        <%= menu_item "Log Out", destroy_user_session_path, method: "delete" %>
        <%= menu_item "Create Organization", new_organization_path %>
      <% end %>
    <% else %>
      <%= render "home/login" %>
    <% end %>
  <% end %>
<% end %>
