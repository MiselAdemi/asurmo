<div class="row">
  <%= nav_bar fixed: :top, brand: "ASURMO", responsive: true do %>
    <%= menu_group do %>
      <%= menu_divider %>
    <% end %>
    <%= menu_group pull: :right do %>
      <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class='fa fa-bell-o' aria-hidden='true'></i></a>
          <ul class="dropdown-menu notify-drop">
            <div class="notify-drop-title">
              <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">Notifications</div>
              </div>
            </div>
            <!-- end notify title -->
            <!-- notify content -->
            <div class="drop-content" id="notifications">
              <% if !@notifications.empty? %>
                <% @notifications.each do |notification| %>
                  <li>
                    <% if notification.user.avatar.url %>
                      <div class="col-md-3 col-sm-3 col-xs-3"><div class="notify-img"><%= image_tag notification.user.avatar.url %></div></div>
                    <% else %>
                      <div class="col-md-3 col-sm-3 col-xs-3"><div class="notify-img"><%= image_tag "https://exelord.github.io/ember-initials/images/default-d5f51047d8bd6327ec4a74361a7aae7f.jpg" %></div></div>
                    <% end %>
                    <div class="col-md-9 col-sm-9 col-xs-9 pd-l0"><a href=""><%= notification.user.full_name %></a> <%= notification.action %> you!
                    </div>
                  </li>
                <% end %>
              <% end %>
            </div>
            <div class="notify-drop-footer text-center">
              <a href=""><i class="fa fa-eye"></i> View all</a>
            </div>
          </ul>
        </li>

        <%= menu_item "<i class='fa fa-envelope-o' aria-hidden='true'>&nbsp;&nbsp;<span class='label label-danger pull-right'></span></i>".html_safe, chatrooms_path %>

        <%= drop_down 'Settings' do %>
          <%= menu_item 'Profile', user_path(current_user), :class => "dropdown-item" %>
          <%= menu_item 'Organizations', user_organizations_path(current_user), :class => "dropdown-item" %>
          <%= menu_item "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
          <%= menu_item "Log Out", destroy_user_session_path, method: "delete", class: "dropdown-item" %>
          <%= menu_item "Create Organization", new_organization_path(current_user), class: "dropdown-item" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
