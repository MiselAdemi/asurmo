<div class="row">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <% if user_signed_in? %>
          <%= link_to "ASURMO", user_path(current_user), :class => "navbar-brand" %>
        <% else %>
          <%= link_to "ASURMO", root_path, :class => "navbar-brand" %>
        <% end %>
      </div>

      <% if user_signed_in? %>
        <form class="navbar-form navbar-left header-search">
          <div class="form-group users-search">
            <input type="text" class="form-control ui-widget ui-widget-content" placeholder="Search activist ..."  id="header-search-input">
          </div>
        </form>
      <% end %>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle notification-btn" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class='fa fa-bell-o' aria-hidden='true'>&nbsp;&nbsp;<span class='label label-danger pull-right'></span></i></a>
              <ul class="dropdown-menu notify-drop">
                <div class="notify-drop-title">
                  <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-6">Notifications</div>
                  </div>
                </div>
                <!-- end notify title -->
                <!-- notify content -->
                <div class="drop-content" id="notifications">
                  <% if current_user.notifications.present? %>
                    <% current_user.notifications.limit(6).each do |notification| %>
                      <li>
                        <% if notification.user.avatar.url %>
                          <div class="col-md-3 col-sm-3 col-xs-3"><div class="notify-img"><%= image_tag notification.user.avatar.url %></div></div>
                        <% else %>
                          <div class="col-md-3 col-sm-3 col-xs-3"><div class="notify-img"><%= image_tag "https://exelord.github.io/ember-initials/images/default-d5f51047d8bd6327ec4a74361a7aae7f.jpg" %></div></div>
                        <% end %>
                        <div class="col-md-9 col-sm-9 col-xs-9 pd-l0"><a href=""><%= notification.user.full_name %></a> <%= notification.action %> you!
                        </div>
                      </li>
                    <% end %>
                  <% end %>
                </div>
                <div class="notify-drop-footer text-center">
                  <a href=""><i class="fa fa-eye"></i> View all</a>
                </div>
              </ul>
            </li>

            <li><%= link_to "<i class='fa fa-envelope-o' aria-hidden='true'>&nbsp;&nbsp;<span class='label label-danger pull-right'></span></i>".html_safe, chatrooms_path %></li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li class="dropdown-item"><%= link_to "Profile", user_path(current_user) %></li>
                <li class="dropdown-item"><%= link_to "Organizations", user_organizations_path(current_user) %></li>
                <li class="dropdown-item"><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
                <li class="dropdown-item"><%= link_to "Log Out", destroy_user_session_path, method: "delete" %></li>
                <% if current_user.admin %>
                  <li class="dropdown-item"><%= link_to "Invite user", new_user_invitation_path %></li>
                  <li class="dropdown-item"><%= link_to "Admin doshboard", admin_path %></li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>