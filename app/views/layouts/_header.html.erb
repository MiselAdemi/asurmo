<%= nav_bar fixed: :top, brand: "ASURMO", responsive: true do %>
  <%= menu_group do %>
    <%= menu_divider %>
  <% end %>
  <%= menu_group pull: :right do %>
    <% if user_signed_in? %>
      <%= menu_item '<i class="fa fa-home" aria-hidden="true"></i>'.html_safe, user_path(current_user), :class => "navbar-glyph" %>
      <%= menu_item 'Profile', user_path(current_user), :class => "navbar-link" %>
      <%= menu_item 'Organizations', organizations_path(current_user), :class => "navbar-link" %>
      <%= drop_down 'Settings' do %>
        <%= menu_item "Edit Profile", edit_user_path(current_user), class: "dropdown-item" %>
        <%= menu_item "Log Out", destroy_user_session_path, method: "delete", class: "dropdown-item" %>
        <%= menu_item "Create Organization", new_organization_path(current_user), class: "dropdown-item" %>
      <% end %>
    <% else %>
      <%= render "home/login" %>
    <% end %>
  <% end %>
<% end %>
