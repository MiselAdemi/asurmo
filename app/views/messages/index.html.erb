<% if @over_ten %>
  <%= link_to 'Show Previous', '?m=all' %>
<% end %>
<div class="messages-list">
  <% @messages.each do |message| %>
    <% if message.body %>
      <% user = User.find(message.user_id) %>
      <% if user.id == current_user.id %>
        <div class="item clearfix">
          <div class="content">
            <div class="header">
              <%= image_tag user.avatar.url, :class => "img-thumbnail" %>
              <strong><%= user.first_name %></strong>
              <%= message.message_time %>
            </div>

            <div class="well pull-right info">
              <div class="item">
                <i class="right triangle icon"></i>
                <%= message.body %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="item clearfix">
          <div class="content">
            <div class="header pull-right">
              <strong><%= user.first_name %></strong>
              <%= message.message_time %>
              <%= image_tag user.avatar.url, :class => "img-thumbnail" %>
            </div>

            <div class="well well-sender warning">
              <div class="item">
                <i class="right triangle icon"></i>
                <%= message.body %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= form_for [@conversation, @message], :remote => true, html: {class: "reply-form"} do |f| %>
  <div class=”field”>
    <%= f.text_area :body, class: "form-control", :placeholder => "Your message..." %>
  </div>
  <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
  <div>
    <%= f.submit "Send", class: "btn btn-success" %>
  </div>
<% end %>
