<%= form_for new_comment, :class => "comment-form", remote: true, :html => { :id => "comment-form-#{new_comment.commentable_id}" } do |f| %>
  <%= f.hidden_field :commentable_id, value: new_comment.commentable_id %>
  <%= f.hidden_field :commentable_type, value: new_comment.commentable_type %>
  <%= f.text_area :body, class: "w-5/6 border hover:border-blue rounded-full pl-2 pt-3", :placeholder => "Type your comment..." %>
<% end %>
