<div class="comments-container mt-4 p-2">
  <div id="comment-container-<%= commentable.id %>">
    <%= render partial: "comments/reply", locals: {comments: commentable.trackable.root_comments, new_comment: new_comment, type: :root } %>
  </div>

  <div class="load-more-container w-full text-center my-4">
  	<%= image_tag "ajax-loader.gif", style: "display:none;", class: "loading-gif" %>
  	<%= link_to "Load More", comments_path, class: "load-more no-underline text-teal", data: { activity_id: commentable.id } %>
  </div>
</div>

<div class="text-center ml-6">
  <%= render partial: "comments/form", locals: {new_comment: new_comment} %>
</div>
